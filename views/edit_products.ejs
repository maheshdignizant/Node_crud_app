<%- include('layouts/header') %>
<div class="container">
<div class="row">
    <div class="col-lg-6 mx-auto mt-4">
        <div class="card shawdow">
            <div class="card-header bg-success">
                <h3 class="text-light">Edit Product (<%= products.name %> )</h3>
            </div>
                <div class="card-body p-4">
                    <form action="/update/<%= products._id  %> " method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Product Name" value="<%= products.name  %> "
                             required />
                        </div>

                    <div class="mb-3">
                        <label for="category">Category</label>
                        <input type="text" name="category" class="form-control form-control-lg" placeholder="Enter Category" value="<%= products.category %>"required />
                    </div>

                    <div class="mb-3">
                        <label for="price">Price</label>
                        <input type="number" name="price" class="form-control form-control-lg" placeholder="Enter Price" value="<%= products.price  %>" required />
                    </div>

                    <div class="mb-3">
                        <label for="image">Select Image</label>
                        <input class="form-control form-control-lg" type="file" name="image" placeholder="Select Image"  required />
                        <img src= "/<%=products.image %>" width="100" class="img-thumbnail mt-1" />
                    </div>
                    <input type="hidden" name="old_image" value="<%= products.image  %>"/>
                    <div class="mb-3-grid">
                        <input type="submit" name="submit" value="Update Product" class="btn btn-success btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

</div>
<%- include('layouts/footer') %>